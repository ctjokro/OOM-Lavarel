<script type="text/javascript">
    $(document).ready(function () {
        $("#homepagesearch").validate({
            submitHandler: function (form) {
                this.checkForm();

                if (this.valid()) { // checks form for validity
                    //                    $('#formloader').show();
                    this.submit();
                } else {
                    return false;
                }
            }
        });

    });
</script>    


